# ============================================
# DENTAL CARE - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# DATABASE (Required)
# ============================================
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/dental_care?schema=public"
# Direct URL for migrations (if using connection pooling)
DIRECT_URL="postgresql://user:password@localhost:5432/dental_care?schema=public"

# ============================================
# AUTHENTICATION (Required)
# ============================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"

# Google OAuth credentials (from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================
# SUPABASE STORAGE (Required for image uploads)
# ============================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ============================================
# MIDTRANS PAYMENT (Required for payments)
# ============================================
# Get from Midtrans Dashboard
MIDTRANS_SERVER_KEY="SB-Mid-server-xxxxxxxx"
MIDTRANS_CLIENT_KEY="SB-Mid-client-xxxxxxxx"
NEXT_PUBLIC_MIDTRANS_CLIENT_KEY="SB-Mid-client-xxxxxxxx"
# Set to "true" for production
MIDTRANS_IS_PRODUCTION="false"
NEXT_PUBLIC_MIDTRANS_IS_PRODUCTION="false"

# ============================================
# WHATSAPP NOTIFICATIONS (Optional)
# ============================================
# Fonnte API for WhatsApp notifications
FONNTE_TOKEN="your-fonnte-token"

# ============================================
# CRON JOBS (Required for scheduled tasks)
# ============================================
# Secret for authenticating cron job requests
# Generate with: openssl rand -hex 32
CRON_SECRET="your-cron-secret-here"

# ============================================
# APPLICATION (Required)
# ============================================
# Base URL of your application
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Node environment
NODE_ENV="development"

# ============================================
# OPTIONAL SETTINGS
# ============================================
# Default payment timeout in minutes
# PAYMENT_TIMEOUT_MINUTES=15

# Default reminder hours before appointment
# REMINDER_HOURS=24
